#include <stdio.h>
int main()
{
    int resultado1, resultado2, resultado3;
    resultado1 = 7 + 3*6/2 - 1;
    printf("-Primeira questão: x = 7 + 3*6/2-l\n");
    printf("primeiro serão feitas a multiplicação e divisão\n em seguida a soma e subtração\n");
    printf("sendo assim o valor de x é %d\n", resultado1);
    resultado2 = 2%2 + 2*2 - 2/2;
    printf("-Segunda questão: x = 2%2+2*2-2/2\n");
    printf("primeiro são realizadas a divisão de resto, a multiplicação e a divisão comum\n logo após isso pode ser realizada a soma e subtração\n");
    printf("então o valor de x é %d\n",resultado2);
    resultado3 = (3 * 9 * (3 + (9*3/ (3) ) ) );
    printf("-Terceira questão: x x = (3*9*(3+(9*3/(3))))\n");
    printf("nesse caso apenas deve seguir a ordem dos parenteses, resolvendo primeiro as contas mais internas dentro dos mesmos\n");
    printf("dessa maneira o valor de x é %d",resultado3);
    
    return 0;
}
